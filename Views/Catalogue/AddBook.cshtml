@model Bookish.Models.BookViewModel

<h1>Add Book</h1>

<form method="post">
    <div>
        <label>Name</label>
        <input type="text" asp-for="Name">
    </div>

    <div>
        <label>Author</label>
        <input type="text" asp-for="Author">
    </div>

    <div>
        <label>Genre</label>
        <input type="text" asp-for="Genre">
    </div>

    <div>
        <label>Description</label>
        <input type="text" asp-for="Description">
    </div>

    <div>
        <label>Total Copies</label>
        <input type="number" min="1" asp-for="TotalCopies">
    </div>

    <div>
        <label>Available Copies</label>
        <input type="number" min="1" asp-for="AvailableCopies">
    </div>

    <div>
        <button type="submit">Save</button>
    </div>
</form>
